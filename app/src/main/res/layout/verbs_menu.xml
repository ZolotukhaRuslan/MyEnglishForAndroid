<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E1FD"
    tools:context=".activity.verbsactivity.VerbsMenuActivity">

    <Button
        android:id="@+id/verbsOne"
        android:layout_width="215dp"
        android:layout_height="75dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="100dp"
        android:onClick="verbsOne"
        android:text="Verbs One"
        app:layout_constraintBottom_toTopOf="@+id/verbsTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/verbsTwo"
        android:layout_width="215dp"
        android:layout_height="75dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="98dp"
        android:onClick="verbsTwo"
        android:text="Verbs Two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verbsOne" />

    <Button
        android:id="@+id/verbsThree"
        android:layout_width="215dp"
        android:layout_height="75dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="98dp"
        android:onClick="verbsThree"
        android:text="Verbs Three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verbsTwo" />
</androidx.constraintlayout.widget.ConstraintLayout>