<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.lessonsActivity.LessonTwoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.lessonsActivity.LessonOneActivity">

        <TextView
            android:id="@+id/wordLessonSixRussian"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="29dp"
            android:textAlignment="center"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@+id/wordLessonSixEnglish"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/nextWordLessonSix"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="164dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="172dp"
            android:onClick="clickNextWordLessonTwo"
            android:text="Next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/translateWordLessonSix"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wordLessonSixEnglish" />

        <Button
            android:id="@+id/translateWordLessonSix"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:layout_marginTop="164dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="172dp"
            android:onClick="translateWordLessonTwo"
            android:text="Translate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nextWordLessonSix"
            app:layout_constraintTop_toBottomOf="@+id/wordLessonSixEnglish" />

        <TextView
            android:id="@+id/wordLessonSixEnglish"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="396dp"
            android:textAlignment="center"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wordLessonSixRussian" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>