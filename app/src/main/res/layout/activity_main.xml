<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/lessonAudioMenu"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:layout_marginBottom="328dp"
        android:onClick="audioLessonsMenu"
        android:text="Audio Lesson"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLessons" />

    <Button
        android:id="@+id/buttonVerbs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="97dp"
        android:onClick="verbsMenu"
        android:text="verbs"
        app:layout_constraintBottom_toTopOf="@+id/lessonAudioMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonLessons"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLessons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="97dp"
        android:onClick="lessonsMenu"
        android:text="Lessons"
        app:layout_constraintBottom_toTopOf="@+id/lessonAudioMenu"
        app:layout_constraintEnd_toStartOf="@+id/buttonVerbs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>